{{#each posts as |post| }}
<div class="row mb-4 project" id="blog-post">
  <div class="col-md-5">
    <h2>
      <a id="post-title" href="/posts/{{post.id}}"> {{post.id}}.     {{post.title}}</a>
    </h2>
  </div>
  <div >
    <p>
      {{post.content}}
      
    </p>
    
  </div>
</div>
{{/each}}