<div class="post text-center" id="blog-by-id">
  <h2>{{title}}</h2>
  <hr>
  <p>Blog posted by: {{user.userName}} on {{format_date createdAt}}</p>
  <p>{{content}}</p>
  <hr>

  <h3>Comments:</h3>
  {{#if logged_in}}
  {{#each comments as |comment|}}
  <p>{{comment.comment}} - {{user.userName}} on {{format_date comment.created_at}}</p>


  <a href="/dashboard/editComment/{{comment.id}}" class="edit-link">Edit/Delete Comment</a>

  {{/each}}






  <br>
  <br>


  <div class="row mt-4">
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-desc">Comment here:<span id="blog_id">{{id}}</span></label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <script type="text/javascript" src="/js/comment.js"></script>

  {{else}}
  {{#each comments as |comment|}}
  <p>{{comment.comment}} - {{user.userName}} on {{format_date comment.created_at}}</p>




  {{/each}}



  {{/if}}