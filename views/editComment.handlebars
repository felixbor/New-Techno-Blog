<div class="editComment">

  <form class="form edit-comment-form">
    <div class="form-group">
      <label for="blog-desc">Edit comment here:<span id="blog_id">{{id}}</span></label>
      <textarea class="form-input" id="comment" name="blog-desc">{{comment.comment}}</textarea>
    </div>
    <div class="form-group">
      <button type="button" class="btn btn-primary" id="update" data-id="{{comment.id}}">Update</button>
      <button type="button" class="btn " id="delete-comment" data-id="{{comment.id}}">Delete</button>
    </div>
  </form>
</div>
<script src="/js/editComment.js"></script>